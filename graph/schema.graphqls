type User {
  id: String!
  name: String!
  photo: String!
  membership: String!
  subscriber: Int!
}

type Video {
  id: ID!
  user_id: String!
  url: String!
  watch: Int!
  like: Int!
  dislike: Int!
  restriction: String!
  location: String!
  name: String!
  premium: String!
  category: String!
  thumbnail: String!
  description: String!
  visibility: String!
  day: Int!
  month: Int!
  year: Int!
}

type Comment {
  id: ID!
  user_id: String!
  video_id: Int!
  comment: String!
  like: Int!
  dislike: Int!
  day: Int!
  month: Int!
  year: Int!
}

type Reply {
  id: ID!
  user_id: String!
  comment_id: Int!
  reply: String!
  day: Int!
  month: Int!
  year: Int!
}

type LikeVideo {
  id: ID!
  user_id: String!
  video_id: Int!
  type: String!
}

type LikeComment {
  id: ID!
  user_id: String!
  comment_id: Int!
  type: String!
}

type LikeReply {
  id: ID!
  user_id: String!
  reply_id: Int!
  type: String!
}

type Subscribe {
  id: ID!
  user_id: String!
  subscribe_to: String!
}

input newReply {
  user_id: String!
  comment_id: Int!
  reply: String!
  day: Int!
  month: Int!
  year: Int!
}

type Playlist {
  id: ID!
  name: String!
  description: String!
  second: Int!
  minute: Int!
  hour: Int!
  day: Int!
  month: Int!
  year: Int!
  privacy: String!
  user_id: String!
  views: Int!
}

input newPlaylist {
  name: String!
  description: String!
  second: Int!
  minute: Int!
  hour: Int!
  day: Int!
  month: Int!
  year: Int!
  privacy: String!
  user_id: String!
  views: Int!
}

type DetailPlaylist {
  id: ID!
  playlist_id: Int!
  video_id: Int!
}

input newUser {
  id: String!
  name: String!
  photo: String!
  membership: String!
  subscriber: Int!
}

input newVideo {
  user_id: String!
  url: String!
  watch: Int!
  like: Int!
  dislike: Int!
  restriction: String!
  location: String!
  name: String!
  premium: String!
  category: String!
  thumbnail: String!
  description: String!
  visibility: String!
  day: Int!
  month: Int!
  year: Int!
}

input newComment {
  user_id: String!
  video_id: Int!
  comment: String!
  like: Int!
  dislike: Int!
  day: Int!
  month: Int!
  year: Int!
}

type Query{
  users: [User!]!
  videos: [Video!]!
  comment(videoid: Int!): [Comment!]!
  reply(commentid: Int!): [Reply!]!

  getUserId(userid: String!): User!
  getVideoByUser(userid: String!): [Video!]!
  getVideoId(videoid: Int!): Video!
  getNextVideo(videoid: Int!): [Video!]!
  getVideoTrending: [Video!]!

  getVideoLike(videoid: Int!, type: String!): [LikeVideo!]!
  getCommentLike(commentid: Int!, type: String!): [LikeComment!]!
  getReplyLike(replyid: Int!, type: String!): [LikeReply!]!

  getSubscribe :[Subscribe!]!
  getSubscribeByUser(userid: String!): [Subscribe!]!
  checkSubscribe(userid: String!, subscribeto: String!): Subscribe!

  getCategory(category: String!): [Video!]!

  playlists: [Playlist!]!
  getPlaylistId(playlistid: Int!): [Playlist!]!
  getPlaylistVideo(playlistid: Int!): [DetailPlaylist!]!
}


type Mutation {
  createUser (input: newUser): User!
  updateUser (id: String!, input: newUser): User!
  deleteUser (id: String!): Boolean!
  createVideo (input: newVideo): Video!
  updateVideo (id: ID!, input: newVideo): Video!
  watch (id: Int!): Boolean!

  videoLike(id: Int!, userid: String!, type: String!): Boolean!

  commentLike(id: Int!, userid: String!, type: String!): Boolean!

  replyLike(id: Int!, userid: String!, type: String!): Boolean!

  deleteVideo (id: ID!): Boolean!
  createComment (input: newComment): Comment!
  deleteComment (userid: String!): Boolean!

  createReply (input: newReply): Reply!

  createSubscribe(userid: String!, subscribeto: String!): Subscribe!

  createPlaylist(input: newPlaylist): Playlist!
  deletePlaylist(id: Int!): Boolean!

  createDetailPlaylist(playlistid: Int!, videoid: Int!): DetailPlaylist!
  deleteDetailPlaylist(id: Int!): Boolean!
}

